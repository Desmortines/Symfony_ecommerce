{% extends 'base.html.twig' %}

{% block body %}
    <h1>Article</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ article.name }}</td>
            </tr>
            <tr>
                <th>Characteristics</th>
                <td>{% if article.characteristics %}{{ article.characteristics|join(', ') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ article.price }}</td>
            </tr>
            <tr>
                {% for key,image in article.images %}
                    <th>Image {{ key }}</th>
                    <td>{% if image %}
                            <img src="{{ image.link }}" alt="image {{ key }}">
                        {% endif %}</td>
                {% endfor %}
            </tr>
            <tr>
                <th>Isbnreference</th>
                <td>{{ article.isbnReference }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ article.category.name }}</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ article.stock }}</td>
            </tr>
            <tr>
                <th>Genre</th>
                <td>{%for genre in article.genres %}
                        <li>{{ genre.name }} </li>
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Totalbought</th>
                <td>{{ article.totalBought }}</td>
            </tr>
            <tr>
                <th>Nbrclicked</th>
                <td>{{ article.nbrClicked }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('article_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('article_edit', { 'id': article.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
