        <div class="row divCommand" style="padding: 1em;">
            <div class="col-lg-12">
                <article>
                    <p>Characteristics :</p>
                    <p>{% if article.characteristics %}{{ article.characteristics|join(', ') }}{% endif %}</p>
                </article>
            </div>
            <div class="col-lg-12">
                <article>
                    <p>Category :</p>
                    <p>{{ article.category }}</p>
                </article>
            </div>
            <div class="col-lg-12">
                <article>
                    <p>Genre :</p>
