{% block genreCards %}
    <div class="container-fluid fondcontainer">
        <h1 class="mt-5 mb-1 pt-3 text-center h1Categorie">Nos genres</h1>
        {% if (genres is not defined) %}
            {% set genres = [] %}
        {% endif %}
        {% for k,genre in genres %}
            {% if (k%4 == 0) %}
                <div class="row space pb-3">
            {% endif %}

            <div class="col-lg-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title text-center center-block">{{ genre.name }}</h5>
                        <a href="{{ path('genre_show', {'id': genre.id}) }}"
                           class="btn btn-primary centerButton">Go somewhere</a>
                    </div>
                </div>
            </div>

            {% if (k%4 == 3) %}
                </div>
            {% endif %}
        {% endfor %}
    </div>
{% endblock %}