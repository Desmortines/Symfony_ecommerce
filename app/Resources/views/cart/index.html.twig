{% extends 'base.html.twig' %}
{% block body %}
    {{ parent() }}

    {% block pageTitle %}
    <div class="fondcontainer" style="margin-bottom: 2rem;">
        <h1 class="h1edit">Votre panier !</h1>
    </div>
    {% endblock %}

    {% block Command %}
        <div class="container-fluid fondcontainer mTop mBottom">
            <ul class="cartElementList">
                {% if (cart is not defined) %}
                    {% set cartElements = [] %}
                {% endif %}
                {% for k, cartElement in cart.cartElement %}
                <li>
                    <div class="row divCommand">
                    <div class="col-lg-9">
                        <div class="row mBottom mTop" style="text-align:left; height:50px; display: table; width: 100%;">
                            <article class="col-lg-2">

                                <img src="{{ asset('assets/img/selection.jpg') }}" style="width: 150px; height: auto;">

                            </article>

                            <article class="col-lg-2">

                                <p>{{ cartElement.article.name }}</p>
                                {#<p>{{ cartElement.article.characteristics.author }}</p>#}
                                <p><label style="font-size: inherit;" for="scales">Cadeau</label><input type="checkbox" name="kdo" value="kdo"></p>
                                {#<p>{{ cartElement.article.characteristics.synopsis }}</p>#}

                            </article>

                            <article class="col-lg-2">
                                <p>Prix à l\'unité :</p>
                                <p>{{ cartElement.article.price }}</p>

                            </article>

                            <article class="col-lg-2">
                                <p>Quantité :</p>
                                <input id="howMuch" type="number" value="1" min="1" max="64">

                            </article>

                            <article class="col-lg-2">

                                <p>Total :</p>
                                <p>{{ cart.preTotal }}</p>

                            </article>
                        </div>
                    </div>
                    <div class="col-lg-3">

                    </div>
                </div>
                </li>
            {% endfor %}
        </ul>
        </div>
    {% endblock %}

    {% block aside %}
        <aside>
            <h3>Total à régler :</h3>
            <ul>
                <li><a href="#">{# cart.total #}</a></li>
                <li><a href="#">+ les intérêts</a></li>
                <li><a href="#">Code promo</a></li>
                <li><a href="#">Re-code promo</a></li>
            </ul>
            <button class="btn btn-outline-success my-2 my-sm-0 buttonCde" type="submit">Commandez !</button>
        </aside>
    {% endblock %}
{% endblock %}
