{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}
{% block body %}
    {{ parent() }}
    {% block MonthProduct %}
        <div class="container fondcontainer">
            <div class="row">
                <div class="col-lg-8 col-md-6 col-sm-1">
                    <div class="MonthProd">
                        <h1>Le produit du mois !</h1>
                        <h2>Harry Potter et les reliques de la mort</h2>
                        <p class="MonthParag">Bla blabla Hermione, ... Baguette, prout prout Ron, et Harry blablibla
                            Dumbledore. Poudlard Rogue trou de balle, Cicatrice bli blabou.Bla blabla Hermione, ...
                            Baguette, prout prout Ron, et Harry blablibla Dumbledore. Poudlard Rogue trou de balle,
                            Cicatrice bli blabou.Bla blabla Hermione, ... Baguette, prout prout Ron, et Harry blablibla
                            Dumbledore. Poudlard Rogue trou de balle, Cicatrice bli blabou.Bla blabla Hermione, ...
                            Baguette, prout prout Ron, et Harry blablibla Dumbledore. Poudlard Rogue trou de balle,
                            Cicatrice bli blabou.</p>
                    </div>
                </div>
                <div class="col-lg-4 col-md-2 col-sm-1">
                    <img src="{{ asset('assets/img/livreDuMois.png') }}" class="MonthBook"
                         style="width: 180px; height: auto">
                </div>
            </div>
            <div class="row">
                <div class="col-lg-11">
                    <hr class="MonthHr">
                </div>
                <div class="col-lg-1 col-md-4">
                    <button class="btn btn-outline-success my-2 my-sm-0 buttonHeaderOk MonthButton" type="submit">
                        Découvrir
                    </button>
                </div>
            </div>
        </div>
    {% endblock %}
    {% block cards %}
        <div class="container-fluid fondcontainer">
            <h1 class="mt-5 mb-1 pt-3 text-center h1Categorie">Nos catégories</h1>
            {% if (categories is not defined) %}
                {% set categories = [] %}
            {% endif %}
            {% for k,category in categories %}
                {% if (k%3 == 0) %}
                    <div class="row space pb-3">
                {% endif %}

                <div class="col-lg-4">
                    <div class="card">
                        <img class="card-img-top"
                             src="{{ category.picture ?: asset('assets/img/No_Image_Available.gif') }}" width="100%"
                             height="100%"
                             alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title text-center center-block">{{ category.name }}</h5>
                            <a href="{{ path('category_show', {'id': category.id}) }}"
                               class="btn btn-primary centerButton">Go somewhere</a>
                        </div>
                    </div>
                </div>

                {% if (k%3 == 2) %}
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    {% endblock %}
    {% block carouselProduct %}
        <div id="carouselExampleIndicators" class="carousel slide carouCata" data-ride="carousel" data-interval="2000">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="{{ asset('assets/img/carouselCata1.jpg') }}" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="{{ asset('assets/img/carouselCata2.jpg') }}" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="{{ asset('assets/img/carouselCata3.jpg') }}" alt="Third slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    {% endblock %}
{% endblock %}