{% extends 'base.html.twig' %}

{% block body %}
    {{ parent() }}

    {% block cards %}
        <div class="container-fluid fondcontainer">
            <h1 class="mt-5 mb-1 pt-3 text-center h1Categorie">{{ category.name }}</h1>
            {% for k,article in category.article %}
                {% if (k%3 == 0) %}
                    <div class="row space pb-3">
                {% endif %}

                <div class="col-lg-4">
                    <div class="card">
                        {#<img class="card-img-top" src="{{ article.name }}" width="100%" height="100%"#}
                             {#alt="Card image cap">#}
                        <div class="card-body">
                            <h5 class="card-title text-center center-block">{{ article.name }}</h5>
                            <a href="{{ article.id }}" class="btn btn-primary centerButton">Go somewhere</a>
                        </div>
                    </div>
                </div>

                {% if (k%3 == 2) %}
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    {% endblock %}
{% endblock %}