{% extends 'base.html.twig' %}

{% block body %}
    <h1>Users list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Email</th>
                <th>Adress</th>
                <th>Password</th>
                <th>Order</th>
                <th>Paymethod</th>
                <th>Type</th>
                <th>Marks</th>
                <th>Comments</th>
                <th>Theme</th>
                <th>Isactive</th>
                <th>Favorites</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td><a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                <td>{{ user.firstName }}</td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.adress }}</td>
                <td>{{ user.password }}</td>
                <td>{% if user.order %}{{ user.order|join(', ') }}{% endif %}</td>
                <td>{% if user.payMethod %}{{ user.payMethod|join(', ') }}{% endif %}</td>
                <td>{% if user.type %}Yes{% else %}No{% endif %}</td>
                <td>{% if user.marks %}{{ user.marks|join(', ') }}{% endif %}</td>
                <td>{% if user.comments %}{{ user.comments|join(', ') }}{% endif %}</td>
                <td>{{ user.theme }}</td>
                <td>{% if user.isActive %}Yes{% else %}No{% endif %}</td>
                <td>{% if user.favorites %}{{ user.favorites|join(', ') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('user_show', { 'id': user.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('user_edit', { 'id': user.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('user_new') }}">Create a new user</a>
        </li>
    </ul>
{% endblock %}
