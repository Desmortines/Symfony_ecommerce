{% extends 'base.html.twig' %}
{% block body %}
    {{ parent() }}
    {% block pageTitle %}
        <div class="fondcontainer" style="margin-bottom: 2rem;">
            <h1 class="h1edit">Votre recherche</h1>
            <div class="container-fluid fondcontainer">
                {% for k,article in ArticleSearch %}
                    {% if k == 0 %}
                        <h2>Article</h2>
                    {% endif %}
                    {% if (k%3 == 0) %}
                        <div class="row space pb-3">
                    {% endif %}

                    <div class="col-lg-4">
                        <div class="card">
                            {% if (article.images|first.link is defined) %}
                                <img class="card-img-top" src="{{ article.images|first.link }}" width="100%"
                                     height="100%"
                                     alt="Card image cap">
                            {% else %}
                                <img class="card-img-top" src="{{ asset('assets/img/No_Image_Available.gif') }}"
                                     width="100%" height="100%"
                                     alt="Card image cap">
                            {% endif %}
                            <div class="card-body">
                                <h5 class="card-title text-center center-block">{{ article.name }}</h5>
                                <p class="text-center">{{ article.price }} â‚¬</p>
                                <a href="" class="btn btn-primary centerButton">Go somewhere</a>
                            </div>
                        </div>
                    </div>

                    {% if (k%3 == 2) %}
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
            <div class="container-fluid fondcontainer">
                {% for k,category in CategorySearch %}
                    {% if k == 0 %}
                        <h2>Category</h2>
                    {% endif %}
                    {% if (k%3 == 0) %}
                        <div class="row space pb-3">
                    {% endif %}

                    <div class="col-lg-4">
                        <div class="card">
                            {% if (category.image is defined) %}
                                <img class="card-img-top" src="{{ category.image }}" width="100%" height="100%"
                                     alt="Card image cap">
                            {% else %}
                                <img class="card-img-top" src="{{ asset('assets/img/No_Image_Available.gif') }}"
                                     width="100%" height="100%"
                                     alt="Card image cap">
                            {% endif %}
                            <div class="card-body">
                                <h5 class="card-title text-center center-block">{{ category.name }}</h5>
                                <a href="" class="btn btn-primary centerButton">Go somewhere</a>
                            </div>
                        </div>
                    </div>

                    {% if (k%3 == 2) %}
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
            <div class="container-fluid fondcontainer">
                {% for k,genre in GenreSearch %}
                    {% if k == 0 %}
                        <h2>Genre</h2>
                    {% endif %}
                    {% if (k%3 == 0) %}
                        <div class="row space pb-3">
                    {% endif %}

                    <div class="col-lg-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title text-center center-block">{{ genre.name }}</h5>
                                <a href="" class="btn btn-primary centerButton">Go somewhere</a>
                            </div>
                        </div>
                    </div>

                    {% if (k%3 == 2) %}
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    {% endblock %}
{% endblock %}