{% trans_default_domain 'FOSUserBundle' %}

<div class="container-fluid fondcontainer mTop mBottom connexion">
    <div class="formContenu">

        <div class="container my-5">
            <div class="row">
                <div class="col-md-10 mx-auto">

                    {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'form-groupe'} }) }}

                    <div class="form-group">
                        {{ form_widget(form.email, { 'attr': {'class': 'form-control' } }) }}
                        {{ form_label(form.email, null, { 'label_attr': {'class': 'form-control-placeholder'} }) }}
                        {{ form_errors(form.email) }}
                    </div>

                    <div class="form-group">
                        {{ form_widget(form.username, { 'attr': {'class': 'form-control'} }) }}
                        {{ form_label(form.username, null, { 'label_attr': {'class': 'form-control-placeholder'} }) }}
                        {{ form_errors(form.username) }}
                    </div>

                    <div class="form-group">
                        {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control'} }) }}
                        {{ form_label(form.plainPassword.first, null, { 'label_attr': {'class': 'form-control-placeholder'} }) }}
                        {{ form_errors(form.plainPassword.first) }}
                    </div>

                    <div class="form-group">
                        {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control'} }) }}
                        {{ form_label(form.plainPassword.second, null, { 'label_attr': {'class': 'form-control-placeholder'} }) }}
                        {{ form_errors(form.plainPassword.second) }}
                    </div>

                    <div class="form-group">
                        <input class="validButton" type="submit" value="{{ 'registration.submit'|trans }}"/>
                    {{ form_end(form) }}
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

{{ form_end(form) }}